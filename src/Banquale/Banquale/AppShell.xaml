<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Banquale.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Banquale.Views"
    Shell.FlyoutBehavior="Disabled">


    <TabBar>

        <Tab Icon="home.png"
             Title="Compte">

            <ShellContent
                Title="Solde"
                ContentTemplate="{DataTemplate local:BalancePage}"
                Route="Views" />

        </Tab>

        <Tab Icon="transactions.png"
             Title="Transactions">

            <ShellContent
                Title="Solde"
                ContentTemplate="{DataTemplate local:MenuTransferPage}"
                Route="Views" />

        </Tab>

        <Tab Icon="help.png"
             Title="Aide">

            <ShellContent
                Title="Help"
                ContentTemplate="{DataTemplate local:HelpPage}"
                Route="Views" />

        </Tab>

        <Tab Icon="accounts.png"
             Title="Compte">

            

        </Tab>

    </TabBar>

</Shell>

