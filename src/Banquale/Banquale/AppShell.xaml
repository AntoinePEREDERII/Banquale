<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Banquale.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Banquale"
    xmlns:view="clr-namespace:Banquale.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar>

        <ShellContent
            Title="Solde"
            ContentTemplate="{DataTemplate view:BalancePage}"
            Route="Views" />

        <ShellContent
            Title="Choix compte"
            ContentTemplate="{DataTemplate view:SwitchAccountPage}"
            Route="Views" />
        
        <ShellContent
            Title="Connection"
            ContentTemplate="{DataTemplate view:ConnectionPage}"
            Route="Views" />

        <ShellContent
            Title="Categorie"
            ContentTemplate="{DataTemplate view:CategoryPage}"
            Route="Views" />
    </TabBar>

</Shell>

