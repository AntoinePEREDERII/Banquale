<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Banquale.Views.Transfer.RibPage"
             Title="RIB">

    <VerticalStackLayout>

        <Grid RowDefinitions="auto, auto, auto"
              ColumnDefinitions="*, auto" >

            <Label Text="RIB" />

            <Label Text="{Binding SelectedAccount.IBAN}"
                   Grid.Row="1" />

            <Image Source="dotnet_bot.png"
                   Grid.Column="1"
                   Grid.RowSpan="2"
                   MaximumHeightRequest="50" />

            <BoxView Grid.ColumnSpan="2"
                     Grid.Row="2"
                     WidthRequest="400"
                     HeightRequest="1.5" />

        </Grid>

        <Label 
            Text="Titulaire du compte" />

        <Label Text="{Binding SelectedCustomer.Name}" />
        <Label Text="{Binding SelectedCustomer.FirstName}" />

        <!--<Button Text="Télécharger le RIB"
                HeightRequest="150"
                WidthRequest="300" />

        It's not functionnal today  redesign-->

    </VerticalStackLayout>

</ContentPage>
