<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Banquale.Views.CreateCustomerPage"
             Title="CreateCustomerPage">

    <VerticalStackLayout>

        <Label
            Text="Informations du client"
            FontSize="30"
            HorizontalOptions="Center"
            Margin="0,20,0,15"
            TextColor="Red"/>

        <StackLayout Margin="20"
                     x:Name="StackLayout">

            <Grid
                ColumnDefinitions="*, *"
                RowDefinitions="auto, auto">

                    <Label
                        Text="Nom"
                        FontSize="16"
                        Grid.Column="0"
                        Grid.Row="0"/>
                    <Entry
                        x:Name="NameEntry"
                        Placeholder="Entrez le nom"
                        Grid.Column="0"
                        Grid.Row="1" />

                    <Label
                        Text="Prénom"
                        FontSize="16" 
                        Grid.Column="1"
                        Grid.Row="0"/>
                    <Entry
                        x:Name="FirstNameEntry"
                        Placeholder="Entrez le prénom"
                        Grid.Column="1"
                        Grid.Row="1"/>

            </Grid>

            <Label
                Text="Mot de Passe"
                FontSize="16" />
            <Entry
                x:Name="PasswordEntry"
                Placeholder="Entrez le mot de passe"
                IsPassword="True"/>

            <Label
                Text="Compte 1"
                FontSize="25"
                Margin="0, 10, 0, 10"
                TextColor="DarkRed"/>

            <Grid
                ColumnDefinitions="*, *"
                RowDefinitions="auto, auto">

                    <Label
                        Text="Solde"
                        FontSize="16"
                        Grid.Column="0"
                        Grid.Row="0"/>
                    <Entry
                        x:Name="AccountBalanceEntry"
                        Placeholder="Entrez le solde du compte"
                        Keyboard="Numeric"
                        Grid.Column="0"
                        Grid.Row="1"/>

                    <Label
                        Text="Nom du compte"
                        FontSize="16" 
                        Grid.Column="1"
                        Grid.Row="0"/>
                    <Entry
                        x:Name="AccountNameEntry"
                        Placeholder="Entrez le nom du compte"
                        Grid.Column="1"
                        Grid.Row="1" />

            </Grid>

            <Label
                Text="IBAN"
                FontSize="16" />
            <Entry
                Text="FR "
                x:Name="AccountIbanEntry"
                TextChanged="IbanChanged"
                Placeholder="Entrez l'IBAN du compte"
                Keyboard="Telephone"/>

        </StackLayout>

        <Button
            Text="Ajouter un compte"
            HorizontalOptions="Center"
            Margin="0,20,0,0"
            Clicked="Account_Clicked"/>
        
        <Button
            Text="Enregistrer"
            HorizontalOptions="Center"
            Margin="0,20,0,0"
            Clicked="Create_Customer_Clicked"/>

    </VerticalStackLayout>

    

</ContentPage>
